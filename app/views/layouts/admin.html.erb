<html lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<title>Simple CMS | <%= @page_title ||'Home' %></title>
	<meta name="author" content="Kritika">
	<%= stylesheet_link_tag('public', :media => 'all') %>
  
</head>
<body>
	<div id="header">
		<h1><%= link_to(image_tag("home.jpg", :size =>'50x50'), {:action =>'index'}) %> &nbsp;&nbsp; Students:Info</h1>
	</div>
	<div id="main">
		<% if !flash[:notice].blank? %>
		<div class="notice">
			<%= flash[:notice] %>
		</div>
		<% end %>
		<div id="content">
			<%= yield %>
		</div>
	</div>
	<div id="footer">
		<p id="copyright">&copy; t-chowklabs / Kritika</p>
	</div>
</body>
</html>