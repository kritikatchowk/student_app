<%= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>
<div class="subject edit">
	<h2>Update Student</h2>

	<%= form_for(:student, :url => {:action => 'update', :id => @student.id}) do |f| %>

	<table summary="Student form fields">
	<tr>
			<th>Name</th>
			<td><%= f.text_field(:name) %></td>
		</tr>
		<tr>
			<th>Username</th>
			<td><%= f.text_field(:username) %></td>
		</tr>
		<tr>
			<th>Password</th>
			<td><%= f.text_field(:password) %></td>
		</tr>
		<tr>
			<th>Std</th>
			<td><%= f.text_field(:std) %></td>
		</tr>
		<tr>
			<th>Section</th>
			<td><%= f.text_field(:section) %></td>
		</tr>
		<tr>
			<th>Email ID</th>
			<td><%= f.text_field(:email) %></td>
		</tr>
		<tr>
			<th>Mobile no.</th>
			<td><%= f.text_field(:mobile) %></td>
		</tr>
		
	</table>

	<div class="form-buttons">
		<%= submit_tag("Update Student") %>
</div>

<% end %>
</div>